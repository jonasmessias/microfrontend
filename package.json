{
  "name": "microfrontend-portfolio",
  "version": "1.0.0",
  "description": "Microfrontend architecture with React 18, TypeScript, Zustand, Module Federation",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "npm-run-all --parallel dev:*",
    "dev:shell": "npm run dev --workspace=shell",
    "dev:products": "npm run dev --workspace=mfe-products",
    "dev:cart": "npm run dev --workspace=mfe-cart",
    "build": "npm-run-all build:*",
    "build:shell": "npm run build --workspace=shell",
    "build:products": "npm run build --workspace=mfe-products",
    "build:cart": "npm run build --workspace=mfe-cart",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,css,md}\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}